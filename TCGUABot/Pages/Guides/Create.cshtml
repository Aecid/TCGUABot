@page
@model TCGUABot.Pages.Guides.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeckGuide</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeckGuide.Keywords" class="control-label"></label>
                <input asp-for="DeckGuide.Keywords" class="form-control" />
                <span asp-validation-for="DeckGuide.Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeckGuide.Format" class="control-label"></label>
                <select asp-for="DeckGuide.Format" class="form-control">
                    <option value="Legacy">Legacy</option>
                    <option value="Modern">Modern</option>
                    <option value="Standard">Standard</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeckGuide.Url" class="control-label"></label>
                <input asp-for="DeckGuide.Url" class="form-control" />
                <span asp-validation-for="DeckGuide.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
